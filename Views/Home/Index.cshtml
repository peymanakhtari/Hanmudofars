 <script>
 var splide = new Splide('.splide', {
    type: 'loop',
    drag: 'free',
    focus: 'center',
    height: '10.7rem',
    autoWidth: true,
    autoStart: true,
    perPage: 3,
    autoScroll: {
        speed: 1.5,
    },
}).mount(window.splide.Extensions);;
 </script>

 <style>
 .splide__slide {
    margin: 8px;
}

    .splide__slide img {
        max-height: 12rem !important;
    }

 </style>