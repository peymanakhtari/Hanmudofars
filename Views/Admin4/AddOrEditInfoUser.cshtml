@model hanmudo.Models.InfoUser
@{
    ViewData["Title"] = "AddOrEditInfoUser";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-11">


        <form class="me-5 form_Event"  method="post" asp-action="AddOrEditInfoUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">عنوان </label>
                <input asp-for="Title" class="form-control" required />
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Text" class="control-label"> متن</label>
                <textarea asp-for="Text" class="form-control" rows="6" required></textarea>
            </div>
             <div class="form-group">
                <label asp-for="Sequence" class="control-label"> ترتیب </label>
                <input asp-for="Sequence" class="form-control" required/>
            </div>
               
             <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input"  asp-for="Show" /> نمایش
                </label>
            </div>
            <br>
            <select class="form-select" name="belt">
                @foreach (var item in (List<Belt>)ViewBag.belts)
                {
                    @if (Model==null)
                    {
                        <option value="@item.Code">@item.Text</option>
                    }
                    else
                    {
                        if (item.Code == Model.belt)
                        {
                            <option value="@item.Code" selected="selected">@item.Text</option>
                        }
                        else
                        {
                            <option value="@item.Code" >@item.Text</option>
                        }
                    }
                }
            </select>
            <br>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div class="m-4">
   <a href="javascript:history.back()">بازگشت</a><br><br>
</div>
