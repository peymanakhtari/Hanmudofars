@model IEnumerable<hanmudo.Models.RoleContent>
@{
    ViewData["Title"] = "RoleContents";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


<div style="width: 90%;margin: auto;">
    <p>
        <div style="text-align: center;font-size: 1.3rem;">@ViewBag.name</div> <br><br>
        <a href="/Admin2/CategoryTeknik/@ViewBag.TeknikId">بازگشت</a><br><br>

        @Html.ActionLink("افزودن محتوا جدید","AddOrEditContentRole","Admin4",new {Id=0})
    </p><br>
    <table class="table table-striped ">
        <thead>
            <tr>
                <th>
                    نوع
                </th>
                 <th>
                    آموزش
                </th>
                 <th>
                    عنوان
                </th>
                <th>
                    ترتیب
                </th>

                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Type == 1)
                        {
                            <span>تیتر</span>
                        }
                        else if (item.Type == 2)
                        {
                            <span>متن</span>
                        }
                        else if (item.Type == 3)
                        {
                            <span>عکس</span>
                        }
                        else if (item.Type == 4)
                        {
                            <span>ویدیو</span>
                        }
                    </td>
                         <td>
                        @if (item.Category == 1)
                        {
                            <span>قوانین کلاسی</span>
                        }
                        else if (item.Category == 2)
                        {
                            <span>قوانین مربی‌گری</span>
                        }
                        else if (item.Category == 3)
                        {
                            <span>قوانین ‌داوری</span>
                        }
                       
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sequence)
                    </td>

                    <td>
                        @Html.ActionLink("ویرایش","AddOrEditContentRole","Admin4",new {Id=item.Id},new {@class="m-2 btn btn-secondary"})
                        <button class="btn btn-warning" onclick="deleteContent(@item.Id)">حذف</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script>
    function deleteContent(id) {
        if (confirm('آیا محتوا حذف شود')) {
           window.location.href='/Admin4/DeleteContentRole/'+id
        }
    }
</script>
