@model List<hanmudo.Models.Video>

@{
    ViewData["Title"] = "Videos";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div style="width: 90%;margin: auto;">
    <p>
        <a asp-action="AddOrEditvideo">افزودن ویدیو جدید</a>
    </p><br>
    <table class="table table-striped ">
        <thead>
            <tr>
                <th>
                    ویدیو
                </th>
                <th>
                    ترتیب
                </th>

                <th>

                </th>
            </tr>
        </thead>
        <tbody>
          @*  @foreach (var item in (List<hanmudo.Models.Video>)ViewBag.videos)
            {
                
            }*@
            @{
             foreach (var item in Model)
            {
                <tr>
                <td>
                  <div style="max-width:10rem">
            @Html.Raw(item.Text)
        </div>
                </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sequence)
                    </td>


                    <td>
                        @Html.ActionLink("ویرایش","AddOrEditVideo","Admin",new {Id=item.Id},new {@class="m-2 btn btn-secondary"})
                        <button class="btn btn-warning" onclick="deleteVideo(@item.Id)">حذف</button>
                    </td>
                </tr>
            }
            }
           
        </tbody>
    </table>
</div>

<script>
    function deleteVideo(id) {
        if (confirm('آیا عکس فیلم شود')) {
            window.location.href = '/Admin/DeleteVideo/' + id
        }
    }
</script>


